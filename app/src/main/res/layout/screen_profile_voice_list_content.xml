<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/mission"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginVertical="5dp"
    android:layout_marginHorizontal="15dp"
    app:cardCornerRadius="10dp"
    app:cardElevation="0dp">

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingVertical="13dp"
        android:gravity="center_vertical">

        <ImageView
            android:id="@+id/mission_category"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:paddingHorizontal="15dp"
            android:layout_gravity="center"
            android:src="@drawable/icon_google" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_weight="1"
            android:gravity="center_vertical">

            <TextView
                android:id="@+id/voice_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="15sp"
                android:paddingTop="2dp"
                android:textColor="@color/lightBlack"
                android:fontFamily="@font/g_title_bold"
                android:text="음성 이름" />

        </LinearLayout>

        <FrameLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="20dp"
            android:layout_marginVertical="10dp"
            android:layout_gravity="end|center_vertical">

            <!-- 오른쪽으로 옮기려면 layout_gravity="end"로 설정 -->


            <!-- 텍스트 버튼 -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <!-- 진행 중 -->
                <ImageView
                    android:id="@+id/btn_in_progress"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:fontFamily="@font/g_title_medium"
                    android:src="@drawable/source_left"
                    android:textColor="@color/white"
                    android:clickable="true"
                    android:focusable="true"/>

                <!-- 진행 완료 -->
                <ImageView
                    android:id="@+id/btn_completed"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:src="@drawable/source_right"
                    android:clickable="true"
                    android:focusable="true"/>


            </LinearLayout>

            <LinearLayout
                android:id="@+id/progress_btn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/source_middle"
                android:orientation="horizontal"
                android:layout_gravity="start"
                android:layout_marginHorizontal="4dp"
                android:layout_marginVertical="3.5dp"
                android:padding="2dp"
                android:clickable="true"
                android:focusable="true">
            </LinearLayout>
        </FrameLayout>

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

    </LinearLayout>

</androidx.cardview.widget.CardView>