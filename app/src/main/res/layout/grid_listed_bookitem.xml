<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:padding="8dp"
    android:gravity="center">


    <FrameLayout
        android:id="@+id/book_area"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">


        <ImageView
            android:src="@drawable/grid_shadow"
            android:layout_width="70dp"
            android:layout_height="90dp" />

        <!-- 책 이미지 -->
        <ImageView
            android:id="@+id/titleImage"
            android:layout_width="65dp"
            android:layout_height="82dp"
            android:scaleType="centerCrop" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_marginTop="85dp"
            android:layout_marginStart="1dp"
            android:layout_height="12dp"
            android:background="@drawable/rounded_background">

            <!-- 하트 아이콘 -->
            <ImageView
                android:id="@+id/heartIcon"
                android:layout_width="7dp"
                android:layout_height="7dp"
                android:padding="0.3dp"
                android:layout_marginTop="0.3dp"
                android:layout_marginStart="5dp"
                android:layout_gravity="start|center_vertical"
                android:src="@drawable/icon_favorite_filled" />

            <!-- 좋아요 숫자 -->
            <TextView
                android:id="@+id/likeCount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="end|center_vertical"
                android:layout_marginStart="0.3dp"
                android:layout_marginEnd="3dp"
                android:text="15"
                android:padding="1.5dp"
                android:textColor="#000000"
                android:textSize="6sp"
                android:textStyle="bold" />
        </LinearLayout>

        <TextView
            android:id="@+id/titleText"
            android:layout_width="65dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="1dp"
            android:layout_marginTop="97dp"
            android:textColor="#39382D"
            android:textSize="8sp"
            android:text ="BookTitle"
            android:gravity="center"
            android:maxLines="2"
            android:ellipsize="end" />


    </FrameLayout>



</LinearLayout>
