<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/screenHome"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/brown">


    <FrameLayout
        android:id="@+id/bookshelf"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:clickable="true"
        android:focusable="true">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="250dp"
            android:layout_gravity="bottom"
            android:src="@drawable/source_bookshelf" />

        <ImageView
            android:id="@+id/book_1"
            android:layout_width="72dp"
            android:layout_height="90dp"
            android:layout_marginTop="390dp"
            android:layout_marginLeft="55dp"
            android:layout_gravity="top"
            android:clickable="true"
            android:focusable="true"
            android:background="@color/brightYellow"
            android:scaleType="centerCrop"/>

        <ImageView
            android:id="@+id/book_2"
            android:layout_width="72dp"
            android:layout_height="90dp"
            android:layout_marginTop="390dp"
            android:layout_marginLeft="172.5dp"
            android:layout_gravity="top"
            android:clickable="true"
            android:focusable="true"
            android:background="@color/brightYellow"
            android:scaleType="centerCrop"/>

        <ImageView
            android:id="@+id/book_3"
            android:layout_width="72dp"
            android:layout_height="90dp"
            android:layout_marginTop="390dp"
            android:layout_marginLeft="290dp"
            android:layout_gravity="top"
            android:clickable="true"
            android:focusable="true"
            android:background="@color/brightYellow"
            android:scaleType="centerCrop"/>

        <ImageView
            android:id="@+id/book_4"
            android:layout_width="72dp"
            android:layout_height="90dp"
            android:layout_marginTop="510dp"
            android:layout_marginLeft="50dp"
            android:layout_gravity="top"
            android:clickable="true"
            android:focusable="true"
            android:background="@color/brightYellow"
            android:scaleType="centerCrop"/>

        <ImageView
            android:id="@+id/book_5"
            android:layout_width="72dp"
            android:layout_height="90dp"
            android:layout_marginTop="510dp"
            android:layout_marginLeft="180dp"
            android:layout_gravity="top"
            android:clickable="true"
            android:focusable="true"
            android:background="@color/brightYellow"
            android:scaleType="centerCrop"/>

        <ImageView
            android:id="@+id/book_6"
            android:layout_width="72dp"
            android:layout_height="90dp"
            android:layout_marginTop="510dp"
            android:layout_marginLeft="310dp"
            android:layout_gravity="top"
            android:clickable="true"
            android:focusable="true"
            android:background="@color/brightYellow"
            android:scaleType="centerCrop"/>
    </FrameLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_gravity="center"
        android:background="@drawable/source_search_bar"
        android:layout_marginHorizontal="25dp"
        android:layout_marginBottom="90dp">
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginStart="15dp"
            android:src="@drawable/icon_search"/>
        <EditText
            android:id="@+id/search_edit_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center|center_vertical"
            android:background="@android:color/transparent"
            android:layout_marginStart="7dp"
            android:paddingVertical="7dp"
            android:autofillHints=""
            android:inputType="textMultiLine"
            android:textSize="15sp"
            android:focusable="true"
            android:focusableInTouchMode="true"
            android:cursorVisible="true"
            android:hint="제목으로 책을 찾아 보세요"
            android:textColorHint="#C1C1C1"
            android:imeOptions="actionDone"
            android:singleLine="true"/>
    </LinearLayout>


</FrameLayout>